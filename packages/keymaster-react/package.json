{
  "name": "@keekuun/keymaster-react",
  "version": "0.5.0",
  "private": false,
  "description": "React 版 keymaster 键盘快捷键库（基于 Vite 与 TypeScript 的库模式构建）。",
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "keywords": [
    "keymaster",
    "keyboard",
    "shortcut",
    "hotkey",
    "react",
    "react-hooks"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Keekuun/keymaster.git",
    "directory": "packages/keymaster-react"
  },
  "homepage": "https://keymaster-docs.vercel.app/react/",
  "bugs": {
    "url": "https://github.com/Keekuun/keymaster/issues"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --max-warnings=0",
    "lint:fix": "eslint src --fix",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "peerDependencies": {
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "dependencies": {
    "@keekuun/keymaster-core": "workspace:*"
  }
}
