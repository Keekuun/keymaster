{
  "name": "@keekuun/keymaster-vue",
  "version": "0.4.3",
  "private": false,
  "description": "Vue 版 keymaster 键盘快捷键库（基于 Vite 与 TypeScript 的库模式构建）。",
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "keywords": [
    "keymaster",
    "keyboard",
    "shortcut",
    "hotkey",
    "vue",
    "vue3",
    "composition-api"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Keekuun/keymaster.git",
    "directory": "packages/keymaster-vue"
  },
  "homepage": "https://keymaster-docs.vercel.app/vue/",
  "bugs": {
    "url": "https://github.com/Keekuun/keymaster/issues"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --max-warnings=0",
    "lint:fix": "eslint src --fix",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "dependencies": {
    "@keekuun/keymaster-core": "workspace:*"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vue": "^3.4.0"
  }
}
