{
  "name": "keymaster-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "lint:root": "eslint . --ext .ts,.tsx,.js,.jsx,.vue --ignore-path .gitignore",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "prepare": "husky install",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "publish:react": "pnpm --filter @keekuun/keymaster-react publish --access public",
    "publish:vue": "pnpm --filter @keekuun/keymaster-vue publish --access public"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "prettier": "^3.0.0",
    "standard-version": "^9.5.0"
  }
}


