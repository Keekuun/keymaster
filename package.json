{
  "name": "keymaster-monorepo",
  "version": "0.4.3",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint && pnpm lint:root",
    "lint:root": "eslint .",
    "lint:fix": "pnpm -r run lint:fix && pnpm lint:fix:root",
    "lint:fix:root": "eslint . --fix",
    "test": "pnpm -r run test:run",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "prepare": "husky install",
    "docs:dev": "pnpm --filter keymaster-docs run docs:dev",
    "docs:build": "pnpm build && pnpm --filter keymaster-docs run docs:build",
    "docs:preview": "pnpm --filter keymaster-docs run docs:preview",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:core:only": "standard-version --skip.changelog --skip.tag --skip.commit --packageFiles packages/keymaster-core/package.json --bumpFiles packages/keymaster-core/package.json",
    "release:react:only": "standard-version --skip.changelog --skip.tag --skip.commit --packageFiles packages/keymaster-react/package.json --bumpFiles packages/keymaster-react/package.json",
    "release:vue:only": "standard-version --skip.changelog --skip.tag --skip.commit --packageFiles packages/keymaster-vue/package.json --bumpFiles packages/keymaster-vue/package.json",
    "update:readme": "node scripts/update-readme-versions.js",
    "publish:core": "pnpm --filter @keekuun/keymaster-core publish --access public",
    "publish:react": "pnpm --filter @keekuun/keymaster-react publish --access public",
    "publish:vue": "pnpm --filter @keekuun/keymaster-vue publish --access public",
    "publish:all": "pnpm run publish:core && pnpm run publish:react && pnpm run publish:vue"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.6",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.15"
  }
}
